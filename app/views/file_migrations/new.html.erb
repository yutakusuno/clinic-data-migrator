<h1>Upload Data File</h1>

<%= form_with url: create_patients_file_migrations_path, local: true do |form| %>
  <h2>Patient Information</h2>
  <div class="form-group">
    <%= form.label :patient_file, "Patient Information File (CSV format)" %>
    <%= form.file_field :patient_file, required: true, accept: '.csv' %>
  </div>
  <div class="form-group">
    <%= form.submit "Migrate Patient Information", class: "btn btn-primary" %>
  </div>
<% end %>

<%= form_with url: create_vitals_file_migrations_path, local: true do |form| %>
  <h2>Vitals Information</h2>
  <div class="form-group">
    <%= form.label :vitals_file, "Vitals Information File (CSV format)" %>
    <%= form.file_field :vitals_file, required: true, accept: '.csv' %>
  </div>
  <div class="form-group">
    <%= form.submit "Migrate Vitals Information", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Migration History", file_migrations_path, class: "btn btn-secondary" %>
